<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title><%= current_page.data.title || "JOYSO" %></title>
    <!-- Custom styles for this template -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
    <!-- Use the title from a page's frontmatter if it has one -->   
    <%= stylesheet_link_tag "main" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="joyso-logo">
          <% link_to 'index.html' do %>
            <%= image_tag 'joyso-logo.png', height: "24px" %>
          <% end %>
        </div>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to(t('exchange.title'), '') %> <span class="sr-only">(current)</span></li>
          <li><%= link_to(t('privilege.title'), 'privilege.html') %></li>
          <li><%= link_to(t('about.title'), 'about.html') %></li>
          <li><%= link_to(t('career.title'), 'career.html') %></li>
          <li><%= link_to(t('blog.title'), 'https://medium.com/joyso') %></li>
          <li><%= link_to(t('faq.title'), "https://joyso.zendesk.com/hc/#{I18n.locale == :zh_TW ? 'zh-tw' : 'en-us'}") %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%=t('locale') %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to('English', "/#{current_path_without_locale}", locale: :en) %></li>
              <li><%= link_to('中文', "/zh_TW/#{current_path_without_locale}") %></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>


<%= partial 'chat-icon' %>

<%= yield %>


<!--footer-->
<div class="dark-bg">
  <div class="container">
    <div class="footer">
      <div class="row">
        <div class="col-md-6">
          <h3> <%=t('contact') %> </h3>
          <ul>
            <li class="info"> <i class="fas fa-envelope"></i> <h4> support@joyso.io </h4> </li>
            <li class="info"> <i class="fas fa-envelope"></i> <h4> BIZ: biz@joyso.io </h4> </li>
            <li class="info"> <i class="fas fa-phone"></i><h4> +886-930-109-603 </h4> </li>
            <li class="info"> <i class="fas fa-map-marker"></i> <h4> <%=t('location') %> </h4> </li>
            <li class="info"> <i class="fas fa-clock"></i> <h4> <%=t('service_time') %> </h4> </li>
          </ul>
      </div>
      <div class="col-md-6">
        <div class="footer-mail">
          <form class="form-inline" action="https://css-inno.us17.list-manage.com/subscribe/post?u=48a5eb5b484f0ff00386671e9&id=c40ee4f093" method="post" name="mc-embedded-subscribe-form" rel="noopener" target="_blank">
            <div class="form-group">
              <label class="sr-only" for="exampleInputAmount">email</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fas fa-2x fa-envelope"></i></div>
                <input type="text" class="form-control" id="exampleInputAmount" placeholder="Subscribe JOYSO" required type="email">
              </div>
            </div>
            <button type="submit" class="btn btn-joyso" data-ga-action="click" data-ga-label="subscribe" data-track="Lead" name="subscribe" type="submit" value="Subscribe"> Submit</button>
          </form>
          <a data-ga-label="facebook" href="https://www.facebook.com/Joyso.io" rel="noopener" target="_blank"><div class="circle"> <div class="btn-logo"><i class="fab fa-facebook-f fa-2x"></i></div></div></a>
          <a data-ga-label="twitter" href="https://twitter.com/joyso_io" rel="noopener" target="_blank"><div class="circle"> <div class="btn-logo"><i class="fab fa-twitter fa-2x"></i></div></div></a>
          <a href="https://joyso.zendesk.com/hc/zh-tw"><div class="circle"> <div class="btn-logo"><i class="fas fa-envelope fa-2x"></i></div></div></a>
          <a data-ga-label="bitcointalk" href="https://bitcointalk.org/index.php?topic=2802940.0" rel="noopener" target="_blank"><div class="circle"> <div class="btn-logo"><i class="fab fa-btc fa-2x"></i></div></div></a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <h4 class="right"> © 2018 all right reserved, Consensus Innovation Ltd. </h4>
        </div> 
        <div class="col-md-6">
          <div class="footer-right">
            <a class="privacy" href="Privacy Policy" target="_blank"> <%=t('privacy') %> </a> 
            <div class="line"></div>
            <a class="privacy" href="Privacy Policy" target="_blank"> <%=t('use') %> </a> 
          </div>
        </div>
      </div>  
    </div>
  </div>
</div>


    
  </body>
</html>
